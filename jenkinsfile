pipeline {
    agent {
        label 'servers' 
    }
    stages {
        stage('Update Packages') {
            steps {
                
                sh 'sudo yum update -y"'
            }
        }
        stage('Restart Toolstack') {
                stage('Restart Toolstack') {
                    agent {
                        label 'servers'
                    }
                    steps {
                       
                        sh 'xe-toolstack-restart'
                    }
                }
              
            
        }
        stage('Deploy') {
            steps {
                
                sh 'echo '"Updates Successful"''
            }
        }
    }
} 
